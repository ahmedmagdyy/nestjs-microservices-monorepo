{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/lms-api-gateway/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/lms-api-gateway/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/lms-api-gateway",
  "projects": {
    "lms-api-gateway": {
      "type": "application",
      "root": "apps/lms-api-gateway",
      "entryFile": "main",
      "sourceRoot": "apps/lms-api-gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/lms-api-gateway/tsconfig.app.json"
      }
    },
    "course": {
      "type": "application",
      "root": "apps/course",
      "entryFile": "main",
      "sourceRoot": "apps/course/src",
      "compilerOptions": {
        "tsConfigPath": "apps/course/tsconfig.app.json"
      }
    },
    "teacher": {
      "type": "application",
      "root": "apps/teacher",
      "entryFile": "main",
      "sourceRoot": "apps/teacher/src",
      "compilerOptions": {
        "tsConfigPath": "apps/teacher/tsconfig.app.json"
      }
    },
    "lesson": {
      "type": "application",
      "root": "apps/lesson",
      "entryFile": "main",
      "sourceRoot": "apps/lesson/src",
      "compilerOptions": {
        "tsConfigPath": "apps/lesson/tsconfig.app.json"
      }
    },
    "gateway": {
      "type": "application",
      "root": "apps/gateway",
      "entryFile": "main",
      "sourceRoot": "apps/gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/gateway/tsconfig.app.json"
      }
    }
  }
}